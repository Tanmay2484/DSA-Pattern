#include <bits/stdc++.h>
using namespace std;
/* Pattern like this
     n=4
     1 1 1 1  4 star and 0 space
      2 2 2
       3 3
        4
*/
int main() {
    //here row is n and column is 1 to n
    int n;
    //cout<<"enter the value of row : ";
    cin>>n;
    int m=1;
    for(int i=n;i>=1;i--){
        for(int j=n-i;j>0;j--){
            cout<<" ";
        }
        for(int k=i;k>=1;k--){
            cout<<m<<" ";
        }m++;
        cout<<endl;    
    }  
}
