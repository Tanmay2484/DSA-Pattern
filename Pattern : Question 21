#include <bits/stdc++.h>
using namespace std;
/* Pattern like this
     n=4
        *     here 3 sapce 1 star
      * * *    here 2 space 3 star
    * * * * *   here 1 space 5 star
  * * * * * * *  here 0 space 7
*/
int main() {
    //here row is n and column is 1 to n
    int n;
    //cout<<"enter the value of row : ";
    cin>>n;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n-i;j++){
            cout<<" "<<" ";
        }
        for(int k=1;k<=2*i-1;k++){
            cout<<'*'<<" ";
        }
        cout<<endl;    
    }  
}
